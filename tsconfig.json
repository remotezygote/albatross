{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"outDir": "./dist",
		"sourceMap": true,
		"paths": {
			"@warder/*": [
				"../../api/lib/*"
			]
		}
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}